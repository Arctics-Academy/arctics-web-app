extends layout.pug

block content
  p 嗨 #{firstname}
  p 歡迎您加入Arctics升學平台大家庭！以下是您留給我們的資料：
  ul(style="list-style-type: none; padding-left: 0; margin: 0; margin-bottom: 12px;")
    li(style="padding-left: 0; margin-left: 0;") 姓名：#{lastname+firstname}
    li(style="padding-left: 0; margin-left: 0;") 電話：#{phone}
    li(style="padding-left: 0; margin-left: 0; text-decoration: none; color: black;") 電郵地址：#{email}
    li(style="padding-left: 0; margin-left: 0;") 學校科系：#{school+major+year+"年級"}
